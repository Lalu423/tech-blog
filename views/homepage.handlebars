<div class = "posts">
    {{#each posts}}
    <article class="card">
        <div class="card-header">
            <h1>
                <a href="/post/{{id}}">{{title}}</a>
            </h1>
            <section>
                Posted by: {{User.username}} on {{format_date createdAt}}
            </section>
        </div>
        <section class="card-body">
            {{ body }}
        </section>
    </article>
    {{/each}}
</div>